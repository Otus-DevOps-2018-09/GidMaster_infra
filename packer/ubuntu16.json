{
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `my_project`}}",
            "image_name": "reddit-base-{{timestamp}}",
            "image_family": "{{user `my_images`}}",
            "source_image_family": "ubuntu-1604-lts",
            "zone": "europe-west1-d",
            "ssh_username": "{{user `connection_name`}}",
            "machine_type": "{{user `machines`}}",
            "image_description": "{{user `my_image_description`}}",
            "disk_type": "{{user `my_disk_type`}}",
            "disk_size": "{{user `disk_size_for_base_image`}}",
            "network": "{{user `default_network`}}",
            "tags": "{{user `puma_tags`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        }
    ]
}
